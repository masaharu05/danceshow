<h1>フォロワー</h1>

<table class="table">
  <thead>
    <tr>
      <th>名前</th>
      <th>一言</th>
      <th colspan="3"></th>
    </tr>
  </thead>


    <% @users.each do |user| %>
    <td><%= link_to user.user_name, user_path(user.id) %></td>
    <td><%= user.self_introduction %></td>
        <% if current_user != user %>
            <% if user.followed_by?(current_user) %>
                <td><%=link_to "フォローを外す", user_relationships_path(user.id), method: :delete %></td>
                
            <% else %>
                <td><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></td>
            <% end %>
        <% end %>
    <% end %>

</table>

