<h1>ユーザー情報を編集する</h1>
<hr>
<%= form_for @user do |f| %>
  
  <p>名前</p>
  <%= f.text_field :user_name %>
  <p>自己紹介</p>
  <%= f.text_area :self_introduction %>
  <p>プロフィール画像</p>
  <%= f.file_field :user_image, accept: 'image/jpeg,image/gif,image/png' %>

  <hr>
  <%= f.submit "登録する", :class => "btn btn-primary" %>
<% end %>
<hr>
<a href="/users/<%= @user.id %>" class="btn btn-info">ユーザー情報に戻る</a>